    print("El valor de a es: ", a, "\n"); /* Imprime el resultado */
    /* 
        Bloque de comentario
        que abarca varias l√≠neas
    */
    b = b * 2; // b = 4
    print("El valor de b es: ", b, "\n");
    // Fin del programa
}